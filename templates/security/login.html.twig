{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Sign in</h1>
    <label for="email">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
    <label for="password">Password</label>
    <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="d-flex justify-content-between ">
            <div class="form-check mb-3">
                    <input class="form-check-input" id="remember_me" type="checkbox" name="_remember_me"> 
                <label class="form-check-label" for="remember_me">Remember me
                </label>
            </div>
            <div><a class="link-primary" href="#"> Forgot password? </a></div>
        </div>
   
<div class="d-grid gap-2">
    <button class="btn btn-primary " type="submit">
        Sign in
    </button>
    </div>
    <p class="mt-4 text-center text-muted"> Not registred yet? <a class="link-primary" href="#">Create an account!</a></p>
</form>
{% endblock %}
